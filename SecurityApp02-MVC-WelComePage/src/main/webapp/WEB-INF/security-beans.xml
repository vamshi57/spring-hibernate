<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/security https://www.springframework.org/schema/security/spring-security-5.3.xsd">

<security:http use-expressions="true" auto-config="true">
 <security:intercept-url pattern="/welcome.htm" access="permitAll"/>
 <security:intercept-url pattern="/admin.htm" access="hasRole('ROLE_ADMIN')"/>
 <security:intercept-url pattern="/faculty.htm" access="hasRole('ROLE_FACULTY')"/>
 <security:http-basic/>
 <security:access-denied-handler error-page="/secure/access_denied.jsp"/>
 <security:logout logout-success-url="/welcome.htm"/>
 <security:form-login/>
 <security:remember-me/>
</security:http> 


<security:authentication-manager>
    <security:authentication-provider>
      <security:user-service>
        <security:user name="raja" password="{noop}raja" authorities="ROLE_FACULTY"/>
        <security:user name="ramu" password="{noop}ramu" authorities="ROLE_ADMIN"/>
        <security:user name="ravi" password="{noop}ravi" authorities="ROLE_ADMIN,ROLE_FACULTY"/>
      </security:user-service>

      <!-- using properties file configuration -->
      <!-- <security:user-service properties="classpath:com/vamshi/commons/security.properties"/> -->
 
 <!-- <security:jdbc-user-service data-source-ref="ds"
         users-by-username-query="select uname,pwd,status from users where uname=?"
         authorities-by-username-query="select uname,role from users_roles where uname=?"/> -->
    </security:authentication-provider>
</security:authentication-manager>

</beans>
